<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ScrollView01"
android:layout_width="fill_parent"
android:layout_height="fill_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9CCF7"
    >
     >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZE WORLD"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
       />
    <TextView
        android:text="Click radiobutton if answer is one of the radio button but if not, check last option and write correct answer.For now press proceed. "
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:id="@+id/question"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"/>
    <RadioGroup
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/check_a"
            android:text="1"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:onClick="check_answer"
            />
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/check_b"
            android:text="2"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:onClick="check_answer"
            />
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/check_c"
            android:text="3"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:onClick="check_answer"
            />
        <RadioButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/check_d"
            android:text="4"
            android:textSize="30sp"
            android:layout_marginLeft="30dp"
            android:onClick="check_answer"
            />
    </RadioGroup>
    <CheckBox
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="None of these"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/check"
        android:onClick="checkbox"
        />
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:id="@+id/text"
        android:onClick="checktext"
        />
    <Button
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/pro"
        android:onClick="replace"/>
</LinearLayout>
</ScrollView>